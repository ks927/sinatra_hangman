<html>
<head>
        <link rel="stylesheet" href="/styles.css" type="text/css" />
</head>
    <body>
        <div class='container'>
          <div class="row game">
          <div class="col-sm-8 form">
          <h1>Welcome to Hangman</h1>

            <h3>Guess a Letter!</h3>
            
          <form>
            
            <input type="text" name="guess" />
            <input type="submit" value="Guess!" />
            
            <h4><%= @message %></h4>
            
            <p id="guess">You have <%= @guesses %> guesses left!</p>
            <p id="correct"><%= @correct_guesses %>  correct guesses</p>
            <p id="incorrect"><%= @incorrect_guesses %> incorrect guesses </p>
            
          </form>
          </div>
              <div class="col-sm-4 display">
                <p id="display"><%= @display %></p>
                </div>
          </div>
        </div>
    </body>
</html>


